<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="1"
            android:layout_width="59dp"
            android:layout_height="58dp" android:id="@+id/button"
            app:backgroundTint="#673AB7"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumber" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" android:layout_marginStart="64dp"/>
    <Button
            android:text="3"
            android:layout_width="63dp"
            android:layout_height="57dp" android:id="@+id/button2"
            app:backgroundTint="#673AB7" app:iconTint="#595454"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumber"
            android:layout_marginTop="4dp" app:layout_constraintStart_toEndOf="@+id/button4"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="4"
            android:layout_width="66dp"
            android:layout_height="63dp" android:id="@+id/button3"
            app:backgroundTint="#673AB7"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" android:layout_marginStart="64dp"/>
    <Button
            android:text="2"
            android:layout_width="62dp"
            android:layout_height="59dp" android:id="@+id/button4"
            app:backgroundTint="#673AB7"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumber" android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/button" android:layout_marginStart="8dp"/>
    <Button
            android:text="5"
            android:layout_width="63dp"
            android:layout_height="62dp" android:id="@+id/button5"
            app:backgroundTint="#673AB7" app:iconTint="#673AB7"
            app:layout_constraintTop_toBottomOf="@+id/button4"
            android:layout_marginTop="4dp" app:layout_constraintStart_toEndOf="@+id/button3"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="6"
            android:layout_width="60dp"
            android:layout_height="63dp" android:id="@+id/button6"
            app:backgroundTint="#673AB7"
            app:layout_constraintTop_toBottomOf="@+id/button2" android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/button5" android:layout_marginStart="8dp"/>
    <Button
            android:text="8"
            android:layout_width="61dp"
            android:layout_height="56dp" android:id="@+id/button7"
            app:backgroundTint="#673AB7"
            app:layout_constraintTop_toBottomOf="@+id/button5" android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/button8" android:layout_marginStart="8dp"/>
    <Button
            android:text="7"
            android:layout_width="64dp"
            android:layout_height="55dp" android:id="@+id/button8"
            app:backgroundTint="#673AB7"
            app:iconTint="#0C0C0C" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button3" android:layout_marginTop="8dp"
            android:layout_marginStart="64dp"/>
    <Button
            android:text="9"
            android:layout_width="61dp"
            android:layout_height="53dp" android:id="@+id/button9"
            app:backgroundTint="#673AB7"
            app:layout_constraintTop_toBottomOf="@+id/button6" android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/button7" android:layout_marginStart="8dp"/>
    <Button
            android:text="0"
            android:layout_width="61dp"
            android:layout_height="58dp" android:id="@+id/button10"
            app:iconTint="#938F8F" app:backgroundTint="#673AB7"
            app:layout_constraintTop_toBottomOf="@+id/button7"
            android:layout_marginTop="4dp" app:layout_constraintStart_toEndOf="@+id/button16"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="+"
            android:layout_width="70dp"
            android:layout_height="54dp" android:id="@+id/button11"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumber"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button2" app:layout_constraintHorizontal_bias="0.103"
            android:layout_marginStart="4dp"/>
    <Button
            android:text="/"
            android:layout_width="70dp"
            android:layout_height="58dp" android:id="@+id/button12"
            app:layout_constraintTop_toBottomOf="@+id/button13"
            android:layout_marginTop="4dp" app:layout_constraintStart_toEndOf="@+id/button15"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="*"
            android:layout_width="66dp"
            android:layout_height="56dp" android:id="@+id/button13"
            app:layout_constraintTop_toBottomOf="@+id/button14" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" android:layout_marginEnd="72dp"/>
    <Button
            android:text="-"
            android:layout_width="69dp"
            android:layout_height="60dp" android:id="@+id/button14"
            app:layout_constraintTop_toBottomOf="@+id/button11"
            android:layout_marginTop="8dp" app:layout_constraintStart_toEndOf="@+id/button6"
            android:layout_marginStart="4dp"/>
    <Button
            android:text="="
            android:layout_width="62dp"
            android:layout_height="60dp" android:id="@+id/button15"
            app:backgroundTint="#673AB7"
            app:layout_constraintTop_toBottomOf="@+id/button9" android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/button10" android:layout_marginStart="8dp"/>
    <Button
            android:text="."
            android:layout_width="61dp"
            android:layout_height="55dp" android:id="@+id/button16"
            app:backgroundTint="#673AB7"
            app:layout_constraintTop_toBottomOf="@+id/button8" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp" android:layout_marginTop="8dp"/>
    <Button
            android:text="Delete"
            android:layout_width="130dp"
            android:layout_height="42dp" android:id="@+id/button17"
            app:layout_constraintTop_toBottomOf="@+id/button16" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" android:layout_marginStart="64dp"/>
    <Button
            android:text="Clear"
            android:layout_width="142dp"
            android:layout_height="43dp" android:id="@+id/button18"
            app:layout_constraintTop_toBottomOf="@+id/button12"
            android:layout_marginTop="4dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="64dp"/>
    <EditText
            android:layout_width="272dp"
            android:layout_height="64dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextNumber"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="84dp"
            android:layout_marginStart="64dp" android:layout_marginEnd="64dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>